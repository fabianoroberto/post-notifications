{
    "name": "fabianoroberto/post-notifications",
    "description": "Posts notifications",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Fabiano Roberto",
            "email": "fabiano.roberto@ped.technology",
            "role": "Senior Back-end Developer"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "symfony/console": "5.3.*",
        "symfony/dotenv": "5.3.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "5.3.*",
        "symfony/http-client": "5.3.*",
        "symfony/mailer": "5.3.*",
        "symfony/runtime": "5.3.*",
        "symfony/twig-bundle": "5.3.*",
        "symfony/yaml": "5.3.*",
        "twig/extra-bundle": "^2.12|^3.0",
        "twig/twig": "^2.12|^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.18",
        "symfony/maker-bundle": "^1.30"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "fix": [
            "symfony php vendor/bin/php-cs-fixer fix --verbose"
        ],
        "fix-dry-run": [
            "symfony php vendor/bin/php-cs-fixer fix --diff --dry-run -v"
        ],
        "lint-yaml": [
            "symfony console lint:yaml config --parse-tags"
        ],
        "lint-twig": [
            "symfony console lint:twig templates",
            "symfony console lint:twig src"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.3.*"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
